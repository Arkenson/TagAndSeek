<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.drawyourcity.app.Info"
    android:background="#F4B907">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/lin_pic"
        android:id="@+id/lin_pic"
        android:visibility="gone"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/beef_pic"
        android:id="@+id/beef_pic"
        android:visibility="gone"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/liao_pic"
        android:id="@+id/liao_pic"
        android:visibility="gone"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/wu_pic"
        android:id="@+id/wu_pic"
        android:visibility="gone"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/confucius_pic"
        android:id="@+id/confucius_pic"
        android:visibility="gone"
        />


<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="300dp"
    android:id="@+id/SV"
    android:layout_below="@+id/lin_pic"
    android:visibility="visible"
    android:layout_marginTop="140dp"
    android:background="#FFFFFF"
    >

<TextView
    android:id="@+id/textView_explanation"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text=" "
    />

</ScrollView>

    <com.neopixl.pixlui.components.button.Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Show instructions to next site"
        android:background="@drawable/info_buttons"
        android:onClick="showNext"
        android:id="@+id/showNext_old"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        pixlui:typeface="Austie Bost Roman Holiday Sketch.ttf"
        android:textColor="#FFFFFF"
        android:visibility="gone"
        />

    <ImageView
        android:layout_width="310dp"
        android:layout_height="270dp"
        android:src="@drawable/arrive_girl"
        android:id="@+id/arrive_girl"
        android:visibility="gone"
        android:layout_above="@+id/arrivedText"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="360dp"
        android:layout_height="240dp"
        android:src="@drawable/arrive_oldman"
        android:id="@+id/arrive_oldman"
        android:layout_above="@+id/arrivedText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="360dp"
        android:layout_height="260dp"
        android:src="@drawable/arrive_guy"
        android:id="@+id/arrive_guy"
        android:layout_above="@+id/arrivedText"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="360dp"
        android:layout_height="250dp"
        android:src="@drawable/arrive_dude"
        android:id="@+id/arrive_dude"
        android:layout_above="@+id/arrivedText"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="260dp"
        android:src="@drawable/arrive_chef"
        android:id="@+id/arrive_chef"
        android:layout_above="@+id/arrivedText"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="45dp"
        android:background="#FFFFFF"
        android:id="@+id/bubble"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:text=" "/>


    <Button
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:id="@+id/showNext"
        android:onClick="showNext"
        android:text="See Next"
        android:textColor="#FFFFFF"
        android:background="@drawable/info_buttons"
        android:layout_toRightOf="@+id/seeInfo"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:visibility="gone"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:id="@+id/seeInfo"
        android:onClick="seeInfo"
        android:text="Info on Site"
        android:textColor="#FFFFFF"
        android:background="@drawable/info_buttons"
        android:layout_alignParentBottom="true"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="70dp"
        android:visibility="gone"
        />


    <com.neopixl.pixlui.components.textview.TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/arrivedText"
        android:layout_above="@+id/showNext"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:textSize="25dp"
        android:textColor="#1C2D61"
        pixlui:typeface="Austie Bost Roman Holiday Sketch.ttf"
        android:visibility="gone"
        />


    </RelativeLayout>