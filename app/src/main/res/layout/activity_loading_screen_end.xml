<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CB563B">

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Thank you so much, I feel much happier now! I want to give you a gift to express my sincere gratitude."
        android:id="@+id/loadingtextend"
        android:layout_above="@+id/harry"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="233dp"
        android:src="@drawable/harrygift"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:id="@+id/harry"/>

</RelativeLayout>