<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CB563B">

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="I have lost my friends around the city, and now I don't know what to do or how to find them! \n\nCould you please take a walk with me and help me find them? We might even see some interesting places on our way."
        android:id="@+id/loadingtextstart"
        android:layout_above="@+id/harry"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="164dp"
        android:layout_height="233dp"
        android:src="@drawable/ic_harry"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="45dp"
        android:id="@+id/harry"/>

</RelativeLayout>