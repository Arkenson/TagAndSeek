<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.drawyourcity.app.MainActivity"
    android:background="@drawable/background_redlist">

   <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tag and Seek"
        android:id="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" /> -->


    <com.neopixl.pixlui.components.button.Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="How to"
        android:onClick="HowTo"
        android:id="@+id/howToButton"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/getStartedButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corners"
        pixlui:typeface="Austie Bost Roman Holiday Sketch.ttf"/>

    <com.neopixl.pixlui.components.button.Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Get started"
        android:onClick="GetStarted"
        android:id="@+id/getStartedButton"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corners"
        pixlui:typeface="Austie Bost Roman Holiday Sketch.ttf"
    />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

</RelativeLayout>
